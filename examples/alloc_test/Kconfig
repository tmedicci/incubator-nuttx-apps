#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_ALLOC_TEST
	tristate "Allocation test"
	default n
	---help---
		Test allocation and memory mapping using virtual memory.

if EXAMPLES_ALLOC_TEST

config EXAMPLES_ALLOC_TEST_PROGNAME
	string "Program name"
	default "alloc_test"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config EXAMPLES_ALLOC_TEST_PRIORITY
	int "Alloc test task priority"
	default 100

config EXAMPLES_ALLOC_TEST_STACKSIZE
	int "Alloc test stack size"
	default DEFAULT_TASK_STACKSIZE

endif
